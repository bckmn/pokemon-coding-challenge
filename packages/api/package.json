{
  "name": "api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "mocha --require tsx 'src/**/*.spec.ts'",
    "test:watch": "mocha --require tsx --watch 'src/**/*.spec.ts'"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "express": "^4.21.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.1"
  }
}
